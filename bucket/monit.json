{
    "version": "0.7.1",
    "description": "用于展示各种信息的桌面小组件",
    "homepage": "https://github.com/fzf404/Monit",
    "license": {
        "identifier": "MIT license"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/fzf404/Monit/releases/download/v0.7.1/Monit-0.7.1-win-x64.exe#/dl.7z",
            "hash": "d6f0e755f75c04ae6ac02d761834b5a4eda3dac458186fb814f7fb8c86f8c9cc",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\Uninst*\" -Force -Recurse"
            ]
        }
    },
    "installer": {
        "script": [
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name apps) scripts/AppsUtils.psm1)",
            "Mount-ExternalRuntimeData -Source \"$persist_dir\\appdata\" -Target \"$env:APPDATA\\monit\"",
            "Remove-Module -Name AppsUtils"
        ]
    },
    "uninstaller": {
        "script": [
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name apps) scripts/AppsUtils.psm1)",
            "Dismount-ExternalRuntimeData -Target \"$env:APPDATA\\monit\"",
            "Remove-Module -Name AppsUtils"
        ]
    },
    "shortcuts": [
        [
            "Monit.exe",
            "Monit"
        ]
    ],
    "persist": "appdata",
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/fzf404/Monit/releases/download/v$version/Monit-$version-win-x64.exe#/dl.7z"
            }
        }
    }
}
